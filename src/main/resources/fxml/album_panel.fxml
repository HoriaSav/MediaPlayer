<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" styleClass="custom-hbox" stylesheets="@mediaPlayer_light.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.controller.AlbumPanelController">
   <children>
      <VBox spacing="5.0">
         <children>
            <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/Im1.png" />
               </image>
            </ImageView>
            <HBox>
               <children>
                  <Label fx:id="playlistNameLabel" text="_name_">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label fx:id="playlistTracksNumberLabel" text="Tracks: 0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <ScrollPane styleClass="custom-scrollpane">
         <content>
            <VBox fx:id="trackListVBox" />
         </content>
      </ScrollPane>
      <Label fx:id="errorLabel" text="errorLabel" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
